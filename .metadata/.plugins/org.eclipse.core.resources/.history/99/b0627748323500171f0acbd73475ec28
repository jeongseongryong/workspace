package step06;
/* Test02 2.java 에 있던 성적처리 관련 메서드를 분리하여 모아둔 클래스
 * 
 */

class Member2 {
   String name;
   int[] scores = new int[3];
   int total;
   float aver;
	
	public static void init(Member m,String name, int kor, int eng, int math) {
   	m.name = name;
   	m.scores[0] = kor;
   	m.scores[1] = eng;
   	m.scores[2] = math;
   }
   
   public static void compute(Member m) {
  	 m.total = m.scores[0] + m.scores[1] + m.scores[2];
  	 m.aver = m.total / 3f;
   	
   }
   
   public static void print(Member m) {
   	System.out.printf("%s, %d, %d, %d, %d, %f\n",
   			m.name, m.scores[0], m.scores[1], m.scores[2], m.total, m.aver);
   }

}