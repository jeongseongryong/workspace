/*class 문법의 용도 : 관련된 메서드를 묶는 용도 I
 */
package step06;

public class test02_1 {
   static String name;
   static int[] scores = new int[3];
   static int total;
   static float aver;
   
  public static void main(String[] args) {
  	
  	s.name = "홍길동";
  	s.scores[0] = 100;
  	s.scores[1] = 90;
  	s.scores[2] = 90;
  	s.total = s.scores[0] + s.scores[1] + s.scores[2];
  	s.aver = s.total / 3f;
  	
  	System.out.printf("%s, %d, %d, %d, %d, %f\n",
  		s.name, s.scores[0], s.scores[1], s.scores[2], s.total, s.aver);
  }

}
