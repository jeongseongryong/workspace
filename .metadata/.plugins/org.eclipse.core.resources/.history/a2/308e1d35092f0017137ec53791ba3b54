/*변수 선언 :부동소수점 변수*/

		package step02;

		public class Test6 {
			public static void main(String[] args) {
     byte[] arr1;
     
     //arr1 = 10; //일반 적인 값 저장할 수 없다 컴파일 오류!
//     arr1[0] =10; //아직 arr1 변수에 주소를 저장하지 않아서 컴파일 오류!
     arr1= null; // arr1에 0값을 저장한다. 즉 주소가 없음을 의미한다.
     arr1[0] = 10;
     
     
     arr1 = new byte[3];
     
     
     
     
     
     
     
     
     
     
     
			}
		}
    
