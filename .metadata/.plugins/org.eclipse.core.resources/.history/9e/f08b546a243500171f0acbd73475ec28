package step06;

class Student2 {
	String name;
	int[] scores = new int[3];
	int total;
	float aver;
	
	// 클래스 메서드 (=스태틱 메서드)
	public void init(Student2 s, String name, int kor, int eng, int math) {
		this.name = name;
		this.scores[0] = kor;
		this.scores[1] = eng;
		this.scores[2] = math;
	}
	
	public void compute(Student2 s) {
		this.total = this.scores[0] + this.scores[1] + this.scores[2];
		this.aver = this.total / 3f;
		
	}
	
	public void print(Student2 s) {
		System.out.printf("%s, %d, %d, %d, %d, %f\n",
				s.name, s.scores[0], s.scores[1], s.scores[2], s.total, s.aver);
		
	}
}
