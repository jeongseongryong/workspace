/* File I/O - 바이트 스트림 클래스 -FileOutputStream III
 * => 다양한 타입의 값을 읽기
 */
package step16;

import java.io.FileInputStream;


public class Test02_4_in {

	public static void main(String[] args) throws Exception {
			FileInputStream in = new FileInputStream("test02_4.data");
			
			byte b;
			short s;
			int i;
			String str;
			// read(배열주소, offset, length)
			// => 배열주소: 데이터를 저장할 배열
			// => offset: 저장할 위치(index; 0부터~)
			// => length : "희망"하는 읽을 바이트 수
			// => 리턴 값: 실제 읽은 바이트 수
			// 읽은 바이트 수를 반드시 확인해야함.
			
			in.read(s, 5, 2);
			
				for (int i =0; i < 10; i++) {
					System.out.printf("%x ", bytes[i]);
				}
			
			in.close();
	}

