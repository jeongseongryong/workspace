package asd;

import java.io.File;

public class BIT_ls {

	public static void main(String[] args) throws Exception {
		File f = new File("../");
		
		displayDirectory(f, 0);
	}
	
	public static void displayDirectory(File dir, int level) {
		File[] files = dir.listFiles();
		
		for (File file : files) {
			for (int i = 0; i < level; i++)
				System.out.print("  ");
			System.out.printf("%s %s \n",(file.isDirectory() ? ">" : " "),
					file.getName());
			if(file.isDirectory()) {
				displayDirectory(file, level + 1);
			}
		}
	}
	
	
	
	public static void main(String[] args) throws Exception {
		File f = new File("../");
		
		displayDirectory(f, 0);
	}
	
	public static void displayDirectory(File dir, int level) throws Exception{
		File[] files = dir.listFiles();
		
		for (File file : files) { 
				if(file.isFile() && file.getName().fle.length()) { 
						System.out.printf("%s\n", file.getPath()); 
				
				}
		if(file.isDirectory())
		displayDirectory(file, level +1);
					
		}
	}
	
	
}
System.out.printf("islength() = %d\n", f.length());