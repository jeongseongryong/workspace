/* File 다루기 - File 클래스 사용법 4
 * 
 */
package step16;

import java.io.File;
import java.util.Calendar;

public class Test01_4 {

	public static void main(String[] args) throws Exception {
		File f = new File("../");
	}
		public static void displayDirectory(File dir, level) {
			File[] files = dir.listFiles();
			
			for (File file : files) {
				for (int i = 0; i < 0; i++)
					System.out.println("    ");
				System.out.printf("%s %8d %s \n", 
						(file.isDirectory() ? "d" : "-"), 
						file.length(),
						file.getName());
			}
		}
	}
}
