package step02;

public class Test01 {
	public static void main(String[] args) {
      //1) 정수 변수: 정수 값을 저장 할때 사용하는 메모리
		byte b; // 1byte 크기의메모리
		short s; //2byte 크기의메모리
		int i; //4byte 크기의메모리
		long l; //8byte 크기의메모리
		
		//2) 부동 소수점 변수: 부동소수점  값을 저장할 때 사용하는 메모리
		float f; //4byte 크기의메모리
		double d; //8byte 크기의메모리
		//3)문자 변수 : 문자의 유니코드 값을 저장할 때 사용하는 메모리
		char c; //2byte 크기의메모리
	}

}
/* 변수 선언*/