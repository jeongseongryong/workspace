/* File 다루기 - File 클래스 사용법 4
 * 
 */
package step16;

import java.io.File;
import java.util.Calendar;

public class Test01_4 {

	public static void main(String[] args) throws Exception {
		File f = new File("../");
		
		displayDirectory(f, 0);
	}
	
		public static void displayDirectory(File dir, int level) {
			File[] files = dir.listFiles();
			
			for (File file : files) {
				for (int i = 0; i < level; i++) System.out.println("  ");
				
				System.out.printf("%s %8d %s \n", 
						(file.isDirectory() ? "d" : "-"), 
						file.getName());
				
				if(file.isDirectory()) {
					displayDirectory(file, level + 1);
				}
			}
		}
	}

