/* 인스턴스 변수
 * 
 */
package step07;

public class Test02_1 {

  static class Student {
     String name;
     int age;
     boolean working;
  }
  public static void main(String[] args) {
  	Student s = null;
  	System.out.println(s.name);
  	System.out.println(s.age);
  	System.out.println(s.working);
  	
  	s.name = "홍길동";
  	s.age = 20;
  	s.working = true;
  	
  	System.out.println(s.name);
  	System.out.println(s.age);
  	System.out.println(s.working);
  	
  	int a;
  	
  	//System.out.println(a); // 초기화 시키지않고 사용하려면 컴파일 오류
  }
}
