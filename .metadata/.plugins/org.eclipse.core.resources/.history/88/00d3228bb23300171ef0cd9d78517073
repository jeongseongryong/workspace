/*변수 선언 : 변수의 범위*/
package step02;

//public int i = 100; //컴파일 오류
public class Test18 {
	static int a = 10; // 클래스 안에서 무제한 사용
	
	public static void main(String[] args) {
    System.out.println(a);
    m1();
    System.out.println(a);
    
    int b = 20;
  }
   
   public static void m1(int c) {
    int d = 40;
    a = 200;
   }
}
